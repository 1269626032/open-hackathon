{
  "UserLoginResource": {
    "get": {
      "input": {
        "title": "search for the user by id",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "identifier of User"
          }
        }
      }
    },
    "post": {
      "input": {
        "title": "user login",
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "description": "authorization code from OAuth login providers"
          },
          "redirect_uri": {
            "type": "string",
            "description": "redirect URI allowed by OAuth Login proverders"
          },
          "provider": {
            "type": "string",
            "description": "login provider"
          }
        }
      }
    }
  }
}
