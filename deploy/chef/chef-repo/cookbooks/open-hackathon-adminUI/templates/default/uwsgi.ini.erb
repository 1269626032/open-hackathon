[uwsgi]
#application's base folder
base = <%= node['open-hackathon']['admin']['src_dir'] %>

#python module to import
app = run
module = %(app)

#home = /opt/open-hackathon/venv
pythonpath = <%= node['open-hackathon']['admin']['src_dir'] %>

#socket file's location
enable-threads = true
http = 0.0.0.0:<%= node['open-hackathon']['admin']['port'] %>

#permissions for the socket file
chmod-socket    = 666

#the variable that holds a flask application inside the module imported at line #6
callable = app

#location of log files
logto = <%= node['open-hackathon']['uwsgi']['log_file'] %>
